{% extends "base.twig" %}

{% block content %}

<!-- Header -->
<div id="header_img" style="background-image: url('{{ post.thumbnail.src }}');"></div>

<!-- Page Body -->
<div class="py-5">
	<div class="container">

		<div class="row">
			<div class="col-12 col-md-8">

				<h2 class="page_title">{{ post.title }}</h2>
				<hr class="divider">
				<p class="page_text">
					{{ post.content }}
				</p>

				<hr class="divider_bottom">


			</div>
			<div class="col-0 col-md-4"></div>
		</div>

	</div>

</div>



{% endblock %}